{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "include": ["script/**/*.ts"]
}
